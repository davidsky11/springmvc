<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<mapper namespace="com.kv.mapper.UserMapper">
	
	<!-- 配置结果映射 -->
	<resultMap type="com.kv.model.User" id="userMap">
		<id property="id" column="id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="nickname" column="nickname" />
		<result property="email" column="email" />
	</resultMap>
	
	<select id="selectUser" parameterType="User" resultType="java.util.List" resultMap="userMap">
		select * from t_user where username = #{username} and password = #{password}
	</select>
	
	<select id="listUser" resultType="java.util.List" resultMap="userMap">
    	select * from t_user
    </select>

</mapper>